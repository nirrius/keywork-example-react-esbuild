{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "paths": {
      "@packages/common/*": ["packages/common/*"]
    },
    "types": [],
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "checkJs": true,
    "allowJs": true
  },
  "exclude": [
    "./dist/**/*",
    "./functions/**/*"
  ]
}
